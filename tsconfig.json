{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "./",
    "moduleResolution": "node"
  },
  "include": [
    "srv/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
} 